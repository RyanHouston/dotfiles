#!/usr/bin/env bash

# Causes mouse flickering on laptop screen
#xrandr --output DP-1-2 --auto --scale 2x2 --panning 3360x2100+3200+0 --right-of eDP-1

# Set laptop screen resolution to 1920x1080
# Open tweak tools and set Window scaling to 1
# The following command ensures the external monitor is also running at
# window scale of 1
xrandr --output DP-1-2 --scale 1x1 --auto
